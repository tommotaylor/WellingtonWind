%section#top-header.row
  %h1.col-md-2
    = link_to "WellingtonWind", home_path
  %ul.col-md-4.clearfix
    %li= link_to "Spots", spots_path
    %li= link_to "Favourites", favourites_path
  = form_tag search_path, method: 'get', class: "col-md-5 navbar-form" do
    .form-group
      = text_field_tag :search_term, params[:search_term], class: "form-control", type: "text", placeholder: "Search by spot"
      = submit_tag "Search", class: "btn btn-default", name: nil
    - if signed_in?
      #user_links.pull-right
        %ul
          %li.dropdown
            %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
              Welcome, #{current_user.name}
              %b.caret
              %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
                %li
                  =link_to 'Account', user_path(current_user)
                  =link_to 'Sign Out', sign_out_path
    - else
      #user_signed_out_links.pull-right
        %ul
          %li= link_to 'REGISTER', register_path